{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "JavaScript/TypeScript Static Analysis Schema",
  "description": "Normalized output schema for JavaScript/TypeScript static analysis tools",
  "type": "object",
  "required": ["language", "toolchain", "results", "tool_status", "errors"],
  "properties": {
    "language": {
      "type": "string",
      "enum": ["JavaScript", "TypeScript"]
    },
    "toolchain": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["eslint", "semgrep", "sonarjs"]
      }
    },
    "results": {
      "type": "object",
      "required": ["syntax", "style", "bugs", "security", "complexity"],
      "properties": {
        "syntax": {
          "type": "object",
          "properties": {
            "errors": {"type": "integer", "minimum": 0},
            "files_affected": {"type": "integer", "minimum": 0}
          }
        },
        "style": {
          "type": "object",
          "properties": {
            "warnings": {"type": "integer", "minimum": 0},
            "top_violations": {
              "type": "array",
              "items": {"type": "string"}
            }
          }
        },
        "bugs": {
          "type": "object",
          "properties": {
            "potential_bugs": {"type": "integer", "minimum": 0},
            "dead_code": {"type": "integer", "minimum": 0}
          }
        },
        "security": {
          "type": "object",
          "properties": {
            "vulnerabilities": {"type": "integer", "minimum": 0},
            "high_severity": {"type": "integer", "minimum": 0},
            "severity_breakdown": {
              "type": "object",
              "properties": {
                "ERROR": {"type": "integer", "minimum": 0},
                "WARNING": {"type": "integer", "minimum": 0},
                "INFO": {"type": "integer", "minimum": 0}
              }
            },
            "security_issues": {"type": "integer", "minimum": 0}
          }
        },
        "complexity": {
          "type": "object",
          "properties": {
            "violations": {"type": "integer", "minimum": 0},
            "files_with_issues": {"type": "integer", "minimum": 0}
          }
        }
      }
    },
    "tool_status": {
      "type": "object",
      "additionalProperties": {
        "type": "string",
        "enum": ["ok", "failed", "skipped"]
      }
    },
    "errors": {
      "type": "array",
      "items": {"type": "string"}
    }
  }
}